@model IEnumerable<Crypto.ArqLimpia.BL.DTOs.GetAllOrderOutputDTOs>

<!DOCTYPE html>
<html>
<head>
    <title style="text-align:center;">Orders</title>
    <!-- Add Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Orders</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Email</th>
                    <th>Cryptocurrency ID</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DateOrder</td>
                        <td>@item.email</td>
                        <td>@item.product_id</td>
                        <td>@item.Quantity</td>
                        <td>@item.total</td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-Id="@item.Id" asp-controller="Order" class="btn btn-warning">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Add Bootstrap JS script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
