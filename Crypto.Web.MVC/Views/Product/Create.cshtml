@model Crypto.ArqLimpia.BL.DTOs.CreateProductInputDTOs;

@{
    ViewData["Title"] = "Guardar";

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css">

<div class="card" style="max-width: 400px; margin: 0 auto;">
    <div class="card-header" style="background-color: #384B6D; border-bottom: 1px solid #e0e0e0;">
        <h3 style="margin: 0; padding: 10px; text-align: center; color: gold;">NEW CRYPTOCURRENCIE</h3>
    </div>
    <div class="card-body" style="background-color: #f7f7f7;">
        <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data" style="max-width: 400px; margin: 0 auto;">
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input asp-for="ProductName" type="text" id="productName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="productDescription" class="form-label">Description</label>
                <textarea asp-for="ProductDescription" id="productDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="productPrice" class="form-label">Price</label>
                <input asp-for="price" type="text" id="productPrice" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="productAmount" class="form-label">Amount</label>
                <input asp-for="Amount" type="text" id="productAmount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <button type="submit" class="btn btn-primary ">Create</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-warning">Back to list</a>
            </div>
        </form>
    </div>
</div>



